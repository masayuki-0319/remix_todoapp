{
  "name": "remix_todoapp",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "format:check": "prettier --check ./{app,tests}/**/*.{ts,tsx}",
    "format:write": "npx prettier --write ./{app,tests}/**/*.{ts,tsx}",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "test": "dotenv -e .env.test -- vitest",
    "db:init": "yarn db:migrate && yarn db:seed",
    "db:migrate": "yarn dev:db:migrate && yarn test:db:migrate",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:seed": "prisma db seed",
    "dev:db:migrate": "prisma migrate dev",
    "test:db:migrate": "dotenv -e .env.test -- prisma migrate dev"
  },
  "prisma": {
    "seed": "tsx prisma/seed/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@remix-run/node": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "@remix-run/serve": "^2.7.2",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.7.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "fishery": "^2.2.2",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "remix-flat-routes": "^0.6.4",
    "tsx": "^4.7.1",
    "typescript": "*",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.3.1",
    "vitest-environment-vprisma": "^1.3.0"
  },
  "engines": {
    "node": "20.9.0"
  },
  "packageManager": "yarn@4.1.1",
  "volta": {
    "node": "20.9.0",
    "yarn": "4.1.1"
  }
}
